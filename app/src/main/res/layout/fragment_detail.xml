<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".view.DetailFragment">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sociedade Hacker"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBanner"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvName">

        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLabelOriginalName"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_name"
        app:layout_constraintTop_toBottomOf="@id/cvBanner"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvOriginalName"
        style="@style/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvBanner"
        app:layout_constraintStart_toEndOf="@id/tvLabelOriginalName"
        tools:text="Mr Robot"/>

    <TextView
        android:id="@+id/tvLabelOriginalLanguage"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/original_language"
        app:layout_constraintTop_toBottomOf="@id/tvLabelOriginalName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvOriginalLanguage"
        style="@style/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLabelOriginalName"
        app:layout_constraintStart_toEndOf="@id/tvLabelOriginalLanguage"
        tools:text="English"/>

    <TextView
        android:id="@+id/tvLabelVoteCount"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vote_count"
        app:layout_constraintTop_toBottomOf="@id/tvLabelOriginalLanguage"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvVoteCount"
        style="@style/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLabelOriginalLanguage"
        app:layout_constraintStart_toEndOf="@id/tvLabelVoteCount"
        tools:text="35"/>

    <TextView
        android:id="@+id/tvLabelOverview"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vote_count"
        app:layout_constraintTop_toBottomOf="@id/tvLabelVoteCount"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvOverview"
        style="@style/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLabelVoteCount"
        app:layout_constraintStart_toEndOf="@id/tvLabelOverview"
        tools:text="Lorem ipsum"/>

</androidx.constraintlayout.widget.ConstraintLayout>